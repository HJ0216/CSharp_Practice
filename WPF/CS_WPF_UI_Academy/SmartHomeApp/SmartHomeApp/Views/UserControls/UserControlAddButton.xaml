<UserControl x:Class="SmartHomeApp.Views.UserControls.UserControlAddButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartHomeApp.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Name="addButton"
             >
    <UserControl.Resources>
        <ResourceDictionary Source="../../Styles/StyleSideMenuIcon.xaml"/>
    </UserControl.Resources>
    <Button Width="300"
            VerticalAlignment="Top" HorizontalAlignment="Right"
            Style="{StaticResource addButton}"
            >
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding Title}"
                       VerticalAlignment="Center"
                       />
            <Border Width="37" 
                    Margin="20 0 0 0" Padding="10"
                    Background="#3256F1"
                    HorizontalAlignment="Right"
                    CornerRadius="50"
                    >
                <Image Source="pack://application:,,,/Resources/button_plus.png"/>
            </Border>
        </StackPanel>
    </Button>
</UserControl>
