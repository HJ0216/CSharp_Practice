<Window x:Class="Hello_WPF.CSCode.WindowFunctionButtons"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hello_WPF.CSCode"
        mc:Ignorable="d"
        Title="WindowFunctionButtons" 
        Height="300" Width="300"
        WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <StackPanel>
            <Button Content="Close window" Click="Button_Click"/>
            <Button Content="Close application" Click="Button_Click_1"/>
            <Button Content="App Directory" Click="Button_Click_2"/>
            <Button Content="Special Folder" Click="Button_Click_3"/>
            <Button Content="Run Notepad" Click="Button_Click_4"/>
            <Button Content="Temp" Click="Button_Click_5"/>
        </StackPanel>
    </Grid>
</Window>
