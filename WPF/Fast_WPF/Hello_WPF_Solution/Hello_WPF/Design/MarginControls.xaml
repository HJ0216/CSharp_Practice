<Window x:Class="Hello_WPF.MarginControls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hello_WPF"
        mc:Ignorable="d"
        Title="MarginControls" Height="378" Width="812">
    <Grid Margin="0,0,-98,-255">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button
            Grid.Row="0" Grid.Column="0"
            Width="50" Height="50"
            />
        <!--마진이 없을 경우, window 크기 변경 시 버튼 이동-->

        <Button 
            Grid.Row="0" Grid.Column="1" 
            Margin="154,66,167,65"
            />
        <!--마진이 모두 있을 경우, window 크기 변경 시 버튼 크기 변경-->

        <Button 
            Grid.Row="1" Grid.Column="0" 
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Content="Button"
            />

        <Button 
            Grid.Row="1" Grid.Column="1" 
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Content="Button"
            />

    </Grid>
</Window>
