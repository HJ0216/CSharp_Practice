<Window x:Class="WPFAdvance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:system="clr-namespace:System;assembly=mscorlib" 
        xmlns:local="clr-namespace:WPFAdvance"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="mainGrid">
        <Grid.Resources>
            <system:Double x:Key="buttonHeight">25</system:Double>
            <system:Double x:Key="buttonWidth">90</system:Double>
            <SolidColorBrush x:Key="buttonBackgroundColor" Color="#E5E5E5"/>
        </Grid.Resources>
        <Button Name="saveButton"
                Content="Save"
                VerticalAlignment="Top" HorizontalAlignment="Left"
                Width="{StaticResource buttonWidth}" Height="{StaticResource buttonHeight}"
                Background="{StaticResource buttonBackgroundColor}"
                />
    </Grid>
</Window>
