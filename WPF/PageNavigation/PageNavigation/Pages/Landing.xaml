<Page x:Class="PageNavigation.Pages.Landing"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PageNavigation.Pages"
      xmlns:root="clr-namespace:PageNavigation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Landing">

    <Grid Background="#FFFFFF"
          ButtonBase.Click="Grid_Click"
          >
        <WrapPanel Margin="5">
            <root:NavButton Text="Accounts"
                            ImageSource="/Images/q10.png"
                            NavUri="/Pages/Accounts.xaml"
                            />
            <root:NavButton Text="Bills"
                            ImageSource="/Images/q9.png"
                            NavUri="/Pages/Bills.xaml"
                            />
            <root:NavButton Text="Employees"
                            ImageSource="/Images/q8.png"
                            NavUri="/Pages/Employees.xaml"
                            />
        </WrapPanel>
    </Grid>
</Page>
