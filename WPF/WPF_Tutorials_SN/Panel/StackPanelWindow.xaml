<Window x:Class="Panel.StackPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Panel"
        mc:Ignorable="d"
        Title="StackPanelWindow" Height="160" Width="300">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button VerticalAlignment="Top" Content="Button 1"/>
            <Button VerticalAlignment="Center" Content="Button 2"/>
            <Button VerticalAlignment="Bottom" Content="Button 3"/>
            <Button VerticalAlignment="Bottom" Content="Button 4"/>
            <Button VerticalAlignment="Center" Content="Button 5"/>
            <Button VerticalAlignment="Top" Content="Button 6"/>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Button HorizontalAlignment="Left" Content="Button 1"/>
            <Button HorizontalAlignment="Center" Content="Button 2"/>
            <Button HorizontalAlignment="Right" Content="Button 3"/>
            <Button HorizontalAlignment="Right" Content="Button 4"/>
            <Button HorizontalAlignment="Center" Content="Button 5"/>
            <Button HorizontalAlignment="Left" Content="Button 6"/>
        </StackPanel>
    </StackPanel>
</Window>
