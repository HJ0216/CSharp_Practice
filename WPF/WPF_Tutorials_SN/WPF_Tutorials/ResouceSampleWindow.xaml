<Window x:Class="WPF_Application.ResouceSampleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Application"
        mc:Ignorable="d"
        Title="ResouceSampleWindow" Height="150" Width="500">
    <Window.Resources>
        <sys:String x:Key="strHelloWPF">Hello, WPF World</sys:String>
    </Window.Resources>
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="{StaticResource strHelloWPF}" FontSize="56"/>
            <TextBlock>Just Another "<TextBlock Text="{StaticResource strHelloWPF}"/>" Example, But with Resources!</TextBlock>
        </StackPanel>
    </Grid>
</Window>
